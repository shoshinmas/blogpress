{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        .align-center {
            margin: 0 auto;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-8 align-center">
            <h1>Posts</h1>
            <table class="table table-striped ">
                <thead class="thead-dark">

                <tr>
                    <th>Title</th>
                    <th>Short description</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{ post.title }}</td>
                        <td>{{ post.shortDesc }}</td>
                        <td>
                            <a href="{{ path('app_admin_post_edit', {id: post.id}) }}" class="btn btn-primary">Edit</a>
                            <a href="{{ path('app_admin_post_delete', {id: post.id}) }}" onclick="return confirm('Are you sure?');" class="btn btn-danger">DELETE</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
    <div class="row">
        <div class="col-lg-8  align-center">
            <a href="{{ path('app_admin_post_create') }}" class="btn btn-primary">Create a post</a>
            <a href="{{ path('app_blogpress') }}" class="btn btn-secondary">Go to blog</a>
        </div>
    </div>

{% endblock %}